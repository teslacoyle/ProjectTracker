<Window x:Class="ProjectTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
    <Grid>
        <Button x:Name="AddButton" Content="_Add a Project" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Margin="10,289,0,0" Click="Button_Click"/>
        <Button x:Name="ListButton" Content="_List all Projects" HorizontalAlignment="Left" Margin="105,289,0,0" VerticalAlignment="Top" Width="90" Click="Button_Click"/>
        <Button x:Name="ReportButton" Content="_Generate Report" HorizontalAlignment="Left" Margin="115,264,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <Button x:Name="ClearButton" Content="_Clear All Entries" HorizontalAlignment="Left" Margin="10,264,0,0" VerticalAlignment="Top" Width="100" Background="Red"/>
    </Grid>
</Window>
